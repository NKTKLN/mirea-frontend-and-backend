<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Add FontAwesome link -->
</head>
<body>
    <header>
        <label for="category-selector" class="filter-label">Select Category:</label>
        <select id="category-selector" class="filter-select">
            <option value="all">All Products</option>
            <% const categories = {}; %>
            <% products.forEach(product => { %>
                <% product.categories.forEach(category => { %>
                    <% if (!categories[category]) { categories[category] = []; } %>
                    <% categories[category].push(product); %>
                <% }); %>
            <% }); %>

            <% Object.keys(categories).forEach(category => { %>
                <option value="<%= category %>"><%= category %></option>
            <% }); %>
        </select>
        <a href="/add">Add Product</a>
    </header>

    <main>
        <div id="product-container" class="product-container">
            <% Object.keys(categories).forEach(category => { %>
                <div class="category-container" id="<%= category %>">
                    <div class="category-header"><%= category %></div>

                    <div class="product-grid">
                        <% categories[category].forEach(product => { %>
                            <div class="product-card">
                                <h2 class="product-name"><%= product.name %></h2>
                                <p class="product-description"><%= product.description %></p>
                                <p class="product-price">$<%= product.price %></p>
                            
                                <div class="button-container">
                                    <button onclick="window.location.href='/edit/<%= product.id %>'" class="edit-btn">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button onclick="deleteProduct('<%= product.id %>')" class="delete-btn">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <script>
                                function deleteProduct(id) {
                                    if (confirm('Are you sure you want to delete this product?')) {
                                        fetch(`/api/products/${id}`, {
                                            method: 'DELETE',
                                        })
                                        .then(response => {
                                            if (response.status === 204) {
                                                alert('Product deleted');
                                                window.location.reload();
                                            } else {
                                                alert('Error deleting product');
                                            }
                                        });
                                    }
                                }
                            </script>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Shop, All Rights Reserved</p>
    </footer>

    <script src="parser.js"></script>
</body>
</html>
